{
  "name": "@jeroenpeeters/site",
  "version": "1.0.0",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "blog": "cd blog && pnpm run",
    "design": "cd design-system && pnpm run",
    "dev": "concurrently \"serve docs\" \"pnpm run blog watch\" \"pnpm run design watch\"",
    "build": "pnpm run blog build && pnpm run design build:prod && pnpm run cname",
    "cname": "cp CNAME docs/CNAME",
    "prepare": "husky install"
  },
  "author": {
    "name": "Jeroen Peeters",
    "email": "contact@jeroenpeeters.be"
  },
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "husky": "^8.0.0",
    "serve": "^14.2.0"
  }
}
